<!doctype html>
<html lang="en-US">
    <head>
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta charset="utf-8" />
        
        <title>{{entry.title}}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover" />
        <meta name="referrer" content="origin-when-cross-origin" />
        {% if getenv("APP_ENV") != "development" %}
            <link rel="stylesheet" type="text/css" href="/main.css" />
        {% endif %}
    </head>
    <body>
        <div class="body">
            <section id="header" name="header">
                <div class="header-container">
                    <div class="header-title">Caitlin & Abry</div>
                    {% include '_partials/menu.twig' %}
                </div>
            </section>
            
            <section id="content" name="content">
                {% set hero = entry.pageHeroImage %}
                {% if hero | length %}
                    <div class="hero-container">
                        <img src="{{hero.first.getUrl}}" />
                    </div>
                {% endif %}

                {{ block('content') }}
            </section>
            
            <section id="footer" name="footer">
                
                {%if getenv("APP_ENV") == "development"%}
                    <script src="http://localhost:8080/main.js"></script>
                {%else%}
                    <script src="/main.js"></script>
                {%endif%}
            </section>
        </div>
    </body>
</html>

