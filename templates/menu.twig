{% set options = [
    {'name': 'Home', 'url': '/'},
    {'name': 'Our Story', 'url': '/our-story'},
    {'name': 'Details', 'url': '/details'},
    {'name': 'Travel & Accommodations', 'url': '/travelAccommodations'},
    {'name': 'Things To Do', 'url': '/thingsToDo'},
    {'name': 'Wedding Party', 'url': '/wedding-party'},
    {'name': 'Registry', 'url': '/registry'},
    {'name': 'Photos', 'url': '/photos'}
]
%}

<nav>
    <div id="menu-root"></div>
    <ul class="nav">
        {% for link in options %}
            {%set activeClass = '' %}
            {%if active == link.name%}
                {%set activeClass = 'nav-item-active'%}
            {%endif%}
                
            <li class="nav-item {{activeClass}}"><a href="{{link.url}}">{{link.name}}</a></li>
        {% endfor %}
    </ul>
</nav>
