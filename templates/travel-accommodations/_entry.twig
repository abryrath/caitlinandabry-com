{% extends "_layouts/default" %}
{% block content %}
    {% cache globally unless getenv('APP_ENV') == 'development' %}

        {% for content in entry.accommodationsContent.all %}
            {% include '_partials/' ~ content.type.handle with {
                content: content,
            } only %}
        {% endfor %}
            
        {% include 'hotels/accordion' with {
            children: entry.hotelsList.all,
        } only %}

        {% for content in entry.travelContent.all %}
            {% include '_partials/' ~ content.type.handle with {
                content: content,
            } only %}
        {% endfor %}

        {% include '_partials/accordion' with {
            children: entry.travelAccordion.all,
        } only %}
    {% endcache %}
{% endblock %}
