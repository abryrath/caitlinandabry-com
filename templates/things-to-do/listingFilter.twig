<div class="Controls" data-filter-data-type="{{ type }}">
    {% if cuisines is defined %}
        <select class="Controls-dropdown" data-filter="cuisine">
            <option default value="">Cuisine</option>
            {% for cuisine in cuisines %}
                <option value="{{ cuisine.id }}">{{ cuisine.title }}</option>
            {% endfor %}
        </select>
    {% endif %}
    
    {% if costs is defined %}
        <select class="Controls-dropdown" data-filter="cost">
            <option default value="">Cost</option>
            {% for cost in costs %}
                <option value="{{ cost.id }}">{{ cost.title }}</option>
            {% endfor %}
        </select>
    {% endif %}

    {% if areas is defined %}
        <select class="Controls-dropdown" data-filter="areas">
            <option default value="">Areas</option>
            {% for area in areas %}
                <option value="{{ area.id }}">{{ area.title }}</option>
            {% endfor %}
        </select>
    {% endif %}

    {% if epicentre is defined and epicentre %}
        <div class="Controls-checkbox-group" data-filter="epicentre">
            <label for="checkbox-epicentre"></label>
            <input type="checkbox" id="checkbox-epicentre" class="Controls-checkbox" data-label="Epicentre" checked=true>
            <label for="checkbox-other"></label>
            <input type="checkbox" id="checkbox-other" class="Controls-checkbox" data-label="Other" checked=true>
        </div>
    {% endif %}
</div>