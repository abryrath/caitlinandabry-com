{% extends '_layouts/default' %}
{% block content %}
    {% cache globally unless getenv('APP_ENV') == 'development' %}
        {% set hero = entry.pageHeroImage %}
        {% if hero | length %}
            <div class="Hero">
                <img src="{{hero.one.getUrl}}"/>
            </div>
        {% endif %}
        {% set photos = craft.app.get('photos').all() %}
        <div data-vue is="photo-lightbox" :photo-data="{{ photos | json_encode }}" class="photos-container"></div>
    {% endcache %}
{% endblock %}
