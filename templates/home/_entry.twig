{% extends '_layouts/default' %}

{% block content %}
    {% cache globally unless getenv('APP_ENV') == 'development' %}
        {% set hero = entry.pageHeroImage %}
        {% if hero | length %}
            <div class="Hero">
                <img src="{{ hero.one.getUrl }}"/>
            </div>
        {% endif %}
        <div class="home">
            {% include '_partials/wysiwyg' with {
                content: entry.wysiwyg,
            } only %}
        </div>
    {% endcache %}
{% endblock %}